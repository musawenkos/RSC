@page
@model RoadSignCapture.Web.Pages.Sign.IndexModel

@{
    ViewData["Title"] = "Signs";
}

<h1 class="text-3xl font-bold text-gray-100 mb-6">Signs</h1>

<!-- Grid of Cards -->
<div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">

    @foreach (var item in Model.Sign)
    {
        <div class="bg-gray-900 border border-gray-700 rounded-xl shadow-lg p-5 hover:shadow-xl transition">

            <!-- Sign Header -->
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-green-400">@item.SignIdNumber</h2>
                <span class="px-2 py-1 text-xs rounded bg-gray-800 border border-gray-600 text-gray-300">
                    @item.SignType
                </span>
            </div>

            <!-- Attributes -->
            <div class="text-gray-300 space-y-1 text-sm">

                <p>
                    <span class="font-semibold text-gray-400">SARTSM:</span>
                    @item.SARTSMCode
                </p>

                <p>
                    <span class="font-semibold text-gray-400">Route:</span>
                    @item.RouteName
                </p>

                <p>
                    <span class="font-semibold text-gray-400">Node:</span>
                    @item.NodeNumber
                </p>

                <p>
                    <span class="font-semibold text-gray-400">Status:</span>
                    <span class="text-blue-300">@item.InstallationStatus</span>
                </p>

                @if (item.Project != null)
                {
                    <p>
                        <span class="font-semibold text-gray-400">Project:</span>
                        @item.Project.ProjectName
                    </p>
                }

                <p>
                    <span class="font-semibold text-gray-400">Coordinates:</span>
                    <span class="text-blue-300">Lat: @item.Latitude, Long: @item.Longitude</span>
                </p>

            </div>

            <!-- Button Actions -->
            <div class="mt-8 flex justify-between">

                <!-- Details -->
                <a asp-page="./Details" asp-route-id="@item.Id"
                   class="px-3 py-2 text-sm bg-yellow-500 hover:bg-yellow-600 text-gray-900 rounded-lg shadow">
                    Details
                </a>

                <!-- Edit -->
                <a asp-page="./Edit" asp-route-id="@item.Id"
                   class="px-3 py-2 text-sm bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow">
                    Edit
                </a>

                <!-- Delete -->
                <a asp-page="./Delete" asp-route-id="@item.Id"
                   class="px-3 py-2 text-sm bg-red-600 hover:bg-red-700 text-white rounded-lg shadow">
                    Delete
                </a>

            </div>

        </div>
    }

</div>
