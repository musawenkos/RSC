@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Road Sign Capture</title>

    <!-- TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Bootstrap Icons (still usable for icons only) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 text-gray-900">
    <!-- Navbar -->
    <header>
        <nav class="bg-white shadow-md">
            <div class="container mx-auto px-4 flex justify-between items-center h-16">
                <!-- Logo -->
                <a class="text-lg font-bold text-gray-800 hover:text-blue-600" asp-area="" asp-page="/Index">
                    Road Sign Capture
                </a>

                <!-- Desktop Menu -->
                <div class="hidden md:flex space-x-6">
                    <a class="@(Context.Request.Path == "/" ? "text-blue-600 font-semibold" : "text-gray-700 hover:text-blue-600")"
                       asp-area="" asp-page="/Index">Home</a>

                    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireUser")).Succeeded)
                    {
                        <a class="@(Context.Request.Path.StartsWithSegments("/Users") ? "text-blue-600 font-semibold" : "text-gray-700 hover:text-blue-600")"
                           asp-area="" asp-page="/Users/Index">Users</a>
                    }
                </div>

                <!-- Right side login/avatar -->
                <div class="flex items-center space-x-4">
                    <partial name="_LoginPartial" />
                </div>

                <!-- Mobile toggle button -->
                <button id="mobileMenuBtn" class="md:hidden text-gray-700 focus:outline-none">
                    <i class="bi bi-list text-2xl"></i>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobileMenu" class="hidden md:hidden px-4 pb-4 space-y-2 bg-gray-100">
                <a class="block @(Context.Request.Path == "/" ? "text-blue-600 font-semibold" : "text-gray-700 hover:text-blue-600")"
                   asp-area="" asp-page="/Index">Home</a>

                @if ((await AuthorizationService.AuthorizeAsync(User, "RequireUser")).Succeeded)
                {
                    <a class="block @(Context.Request.Path.StartsWithSegments("/Users") ? "text-blue-600 font-semibold" : "text-gray-700 hover:text-blue-600")"
                       asp-area="" asp-page="/Users/Index">Users</a>
                }
            </div>
        </nav>
    </header>

    <!-- Main -->
    <div class="container mx-auto px-4 py-6">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-t mt-10 py-4 text-center text-sm text-gray-600">
        &copy; 2025 - RoadSignCapture - <a href="https://mjnexusystems.co.za/" class="text-blue-600 hover:underline" >MJNEXUS Systems</a>
    </footer>

    <!-- jQuery only if needed for dropdowns -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
