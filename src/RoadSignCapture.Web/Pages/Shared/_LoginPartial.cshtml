<ul class="navbar-nav flex items-center space-x-4">

    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="relative">
            <!-- Avatar Button -->
            <a href="#" id="userMenuBtn" class="flex items-center">
                <img src="~/images/avatar.jpg" alt="User Avatar" class="w-8 h-8 rounded-full border-2 border-gray-300">
            </a>

            <!-- Dropdown Menu -->
            <div id="userMenu"
                 class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-100 z-50">
                <div class="px-4 py-2 text-gray-700 font-semibold border-b">
                    @User.Identity?.Name
                </div>
                <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                   href="/RoadSignCapture/Logout">
                    Sign out
                </a>
