@page
@model RoadSignCapture.Web.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mx-auto px-4 py-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-3">
        <h1 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
            <i class="bi bi-person-x-fill text-red-600"></i> Delete User
        </h1>
        <a asp-page="Index"
           class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100
                  hover:bg-gray-200 rounded-lg shadow-sm transition duration-200">
            <i class="bi bi-arrow-left-short mr-2"></i> Back to List
        </a>
    </div>

    <!-- Warning Message -->
    <div class="bg-red-50 border-l-4 border-red-600 p-4 mb-6 rounded-md">
        <h3 class="text-red-700 font-semibold mb-1">Are you sure you want to delete this user?</h3>
        <p class="text-sm text-red-600">This action cannot be undone.</p>
    </div>

    <!-- User Details -->
    <div class="bg-white shadow-md rounded-lg border border-gray-100 p-6">
        <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
            <i class="bi bi-person-circle text-blue-600"></i> User Details
        </h4>

        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-3 text-gray-700 text-sm">
            <div>
                <dt class="font-semibold">Display Name</dt>
                <dd>@Model.Command.Users?.DisplayName</dd>
            </div>
            <div>
                <dt class="font-semibold">Email</dt>
                <dd>@Model.Command.Users?.Email</dd>
            </div>
            <div>
                <dt class="font-semibold">Created</dt>
                <dd>@Model.Command.Users?.Created.ToString("yyyy-MM-dd")</dd>
            </div>
            <div>
                <dt class="font-semibold">Updated</dt>
                <dd>@Model.Command.Users?.Updated.ToString("yyyy-MM-dd")</dd>
            </div>
            <div class="sm:col-span-2">
                <dt class="font-semibold">Company</dt>
                <dd>@Model.Command.Users?.Company?.CompanyName</dd>
            </div>
        </dl>

        <!-- Delete Confirmation -->
        <form method="post" class="mt-8 flex justify-end gap-3">
            <input type="hidden" asp-for="Command.Users!.Email" />

            <a asp-page="./Index"
               class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100
                      hover:bg-gray-200 rounded-lg shadow-sm transition">
                Cancel
            </a>

            <button type="submit"
                    class="inline-flex items-center px-4 py-2 text-sm font-semibold text-white bg-red-600
                           hover:bg-red-700 rounded-lg shadow-md transition duration-200">
                <i class="bi bi-trash3-fill mr-2"></i> Delete User
            </button>
        </form>
    </div>
</div>
