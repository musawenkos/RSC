@page
@model RoadSignCapture.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Road Sign Capture - Dashboard";
}

<div class="container mt-4">
    <h1 class="display-5">🚦 Road Sign Capture Dashboard</h1>
    <p class="lead">Manage your projects, signs, and reports from one place.</p>

    <hr />

    <!-- Project Summary -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Projects</h5>
                    <p class="card-text">Total Projects: <strong>@Model.TotalProjects</strong></p>
                    <a href="/Projects" class="btn btn-primary btn-sm">View Projects</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Signs</h5>
                    <p class="card-text">Total Signs: <strong>@Model.TotalSigns</strong></p>
                    <a href="/Signs" class="btn btn-primary btn-sm">View Signs</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">Generate quantities and layout reports.</p>
                    <a href="/Reports" class="btn btn-success btn-sm">Go to Reports</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Signs Table -->
    <h3 class="mt-5">📋 Recent Signs</h3>
    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Sign ID</th>
                <th>Type</th>
                <th>Location</th>
                <th>Project</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.RecentSigns.Any())
            {
                foreach (var sign in Model.RecentSigns)
                {
                    <tr>
                        <td>@sign.SignId</td>
                        <td>@sign.Type</td>
                        <td>@sign.Location</td>
                        <td>@sign.ProjectName</td>
                        <td>@sign.Status</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No signs available.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Map Placeholder -->
    <h3 class="mt-5">🗺️ Map View</h3>
    <div class="card p-3 shadow-sm">
        <div id="map" style="height:400px; background:#e9ecef; text-align:center; line-height:400px;">
            Map integration placeholder
        </div>
    </div>
</div>
