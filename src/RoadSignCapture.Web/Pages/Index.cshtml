@page
@model RoadSignCapture.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Road Sign Capture - Dashboard";
}

<div class="max-w-7xl mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold mb-2">🚦 Road Sign Capture Dashboard</h1>
    <p class="text-lg text-gray-600 mb-6">Manage your projects, signs, and reports from one place.</p>

    <hr class="my-6 border-gray-300" />

    <!-- Project Summary -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white shadow rounded-xl p-5">
            <h5 class="text-lg font-semibold text-gray-800">Projects</h5>
            <p class="text-gray-600 mt-2">
                Total Projects:
                <strong class="text-gray-900">@Model.TotalProjects</strong>
            </p>
            <a href="/Projects"
               class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm">
                View Projects
            </a>
        </div>

        <div class="bg-white shadow rounded-xl p-5">
            <h5 class="text-lg font-semibold text-gray-800">Signs</h5>
            <p class="text-gray-600 mt-2">
                Total Signs:
                <strong class="text-gray-900">@Model.TotalSigns</strong>
            </p>
            <a href="/Signs"
               class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm">
                View Signs
            </a>
        </div>

        <div class="bg-white shadow rounded-xl p-5">
            <h5 class="text-lg font-semibold text-gray-800">Reports</h5>
            <p class="text-gray-600 mt-2">Generate quantities and layout reports.</p>
            <a href="/Reports"
               class="inline-block mt-4 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm">
                Go to Reports
            </a>
        </div>
    </div>

    <!-- Recent Signs Table -->
    <h3 class="text-xl font-semibold mb-4">📋 Recent Signs</h3>
    <div class="overflow-x-auto bg-white shadow rounded-xl">
        <table class="min-w-full text-sm text-left text-gray-700">
            <thead class="bg-gray-100 text-gray-800 uppercase text-xs">
                <tr>
                    <th class="px-6 py-3">Sign ID</th>
                    <th class="px-6 py-3">Type</th>
                    <th class="px-6 py-3">Location</th>
                    <th class="px-6 py-3">Project</th>
                    <th class="px-6 py-3">Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.RecentSigns.Any())
                {
                    foreach (var sign in Model.RecentSigns)
                    {
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-3 font-medium">@sign.SignId</td>
                            <td class="px-6 py-3">@sign.Type</td>
                            <td class="px-6 py-3">@sign.Location</td>
                            <td class="px-6 py-3">@sign.ProjectName</td>
                            <td class="px-6 py-3">@sign.Status</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-6 py-3 text-center text-gray-500 italic">No signs available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Map Placeholder -->
    <h3 class="text-xl font-semibold mt-8 mb-4">🗺️ Map View</h3>
    <div class="bg-white shadow rounded-xl p-4">
        <div id="map" class="h-96 flex items-center justify-center bg-gray-200 text-gray-500">
            Map integration placeholder
        </div>
    </div>
</div>
